.product-wrap{
  background:linear-gradient(180deg,rgba(208,236,255,1) 0%,rgba(175,219,255,1) 100%);
}
.head-wrap{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 156rpx;
  text-align: center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.head-wrap image{
  width: 240rpx;
  height: 74rpx;
}
.product-content{
  padding: 40rpx;
}
.item-wrap{
  position: relative;
  height: 420rpx;
  padding: 72rpx 16rpx 0 0;
  box-shadow:0px 0px 20rpx 0px rgba(48,106,255,0.22);
  border-radius:8px;
  box-sizing: border-box;
  margin-bottom: 40rpx;
  background-color: #ffffff;
}
.item-wrap .title-image{
  position: absolute;
  top: -10rpx;
  left: 50%;
  width: 334rpx;
  height: 56rpx;
  margin-left: -167rpx;
}
.item-wrap .item-content{
  display: flex;
  align-items: center;
}
.item-wrap .item-left{
  width: 202rpx;
  text-align: center;
}
.item-wrap .item-left .product1{
  width: 146rpx;
  height: 206rpx;
}
.item-wrap .item-left .product2{
  width: 76rpx;
  height: 268rpx;
}
.item-wrap .item-left .product3{
  width: 122rpx;
  height: 192rpx;
}
.item-wrap .item-left .product4{
  width: 156rpx;
  height: 54rpx;
}
.item-wrap .item-right{
  flex: 1;
}
.item-wrap .item-right .item-text{
  font-size: 15px;
  color: #333333;
}
.check-more{
  display: block;
  text-align: right;
  color: #508CEF;
  font-size: 14px;
}