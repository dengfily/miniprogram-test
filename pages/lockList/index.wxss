/* pages/lockList/index.wxss */
.content-item{
  border-bottom: 1px solid #EEEEEE;
  overflow:hidden;
  white-space:nowrap;
}
.content-item text{
  font-size: 15px;
  color: #000000;
  line-height: 100rpx;
}
.content-item image{
  width: 20px;
  height: 20px;
}
.content-item .scroll-view-item{
  width: 100%;
  height: 100%;
  display: inline-block;
  box-sizing: border-box;
}
.content-item .scroll-view-item .flex-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
}
.content-item .scroll-btn{
  width: 74pt;
  height: 100%;
  display: inline-block;
  text-align: center;
  background-color: #FA4169;
}
.content-item .scroll-btn text{
  color: #fff;
}