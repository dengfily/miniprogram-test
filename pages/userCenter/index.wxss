.userCenter-wrap{
  padding-bottom: 40rpx;
  background-color: rgb(246, 246, 246);
}
.user-img-wrap{
  display: flex;
  align-items: center;
  padding: 40rpx 44rpx 30rpx;
  text-align: center;
  color: #ffffff;
  background: linear-gradient(360deg,rgba(171,220,255,1) 0%,rgba(3,150,255,1) 100%);
}
.user-img-wrap .user-img{
  float: left;
  color: #ffffff;
}
.user-img-wrap .user-img image{
  width: 224rpx;
  height: 224rpx;
}
.user-img-wrap .user-img .user-name{
  font-size: 20px;
  margin: 40rpx 0 70rpx;
}
.user-img-wrap .user-img .user-date{
  width: 220rpx;
  height: 48rpx;
  font-size: 16px;
  line-height: 48rpx;
  text-align: center;
  border:1px solid rgba(255,255,255,0.3);
  border-radius:24rpx;
  background:rgba(0,0,0,0.1);
}
.user-img-wrap .user-img-right{
  flex: 1;
  position:relative;
  margin-left: 60rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 8px 0px rgba(8,28,86,0.4);
  border-radius:8px;
}
.user-img-right .box-cart{
  position: absolute;
  left:-12px;
  top: 170rpx;
  border-top: 12px solid transparent;
  border-right: 12px solid #ffffff;
  border-bottom: 12px solid transparent;
}
.user-img-right .info-wrap{
  padding: 14rpx 20rpx;
}
.user-img-right .info-wrap .info-title{
  font-size: 16px;
  color: #333333;
  margin-bottom: 20rpx;
}
.user-img-right .info-content .clearfix{
  font-size: 14px;
  line-height: 26px;
}
.user-img-right .info-content .info-content-left{
  float: left;
  color: #666666;
}
.user-img-right .info-content .info-content-right{
  float: right;
  color: #333333;
}
.user-img-right .info-content .btn-wrap{
  text-align: center;
  margin: 20rpx 0 10rpx;
}
.user-img-right .info-content .btn-wrap button{
  width: 204rpx;
  height: 48rpx;
  color: #ffffff;
  font-size: 24rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 24rpx;
  background-color: #F04F4F;
  box-shadow:0px 12px 20px 0px rgba(0,0,0,0.19);
}
.function-list{
  margin-top: 40rpx;
}
.function-list .function-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 44px;
  padding: 0 50rpx;
  border-bottom: 1px solid #CCCCCC;
  background-color: #ffffff;
}
.function-list .function-item:first-child{
  border-top: 1px solid #CCCCCC;
}
.function-list .function-item .function-item-left{
  display: flex;
  align-items: center;
  font-size: 16px;
  color: #333333;
}
.function-list .function-item .item-icon{
  width: 28px;
  height: 26px;
  margin-right: 14rpx;
}
.function-list .function-item .arrow-right{
  width: 20px;
  height: 20px;
}